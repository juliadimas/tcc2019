<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Entrou">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#747AC4"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imvLogo"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="#747AC4"
                    app:srcCompat="@drawable/lg_completo" />

                <TextView
                    android:id="@+id/tvLogout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="140dp"
                    android:layout_weight="1"
                    android:background="#747AC4"
                    android:text="@string/logout"
                    android:textColor="#000000"
                    android:textSize="20dp" />


            </LinearLayout>

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/ivChat"
                        android:layout_width="340px"
                        android:layout_height="180px"
                        android:layout_weight="1"
                        android:background="#747AC4"
                        app:srcCompat="@drawable/btn_mini1_chat" />

                    <ImageButton
                        android:id="@+id/ivNotas"
                        android:layout_width="340px"
                        android:layout_height="180px"
                        android:layout_weight="1"
                        android:background="#747AC4"
                        app:srcCompat="@drawable/btn_mini2_notas" />

                    <ImageButton
                        android:id="@+id/ivControle"
                        android:layout_width="340px"
                        android:layout_height="180px"
                        android:layout_weight="1"
                        android:background="#747AC4"
                        app:srcCompat="@drawable/btn_mini3_controle" />

                    <ImageButton
                        android:id="@+id/ivHome"
                        android:layout_width="340px"
                        android:layout_height="180px"
                        android:layout_weight="1"
                        android:background="#747AC4"
                        app:srcCompat="@drawable/btn_mini4_casa" />

                    <ImageButton
                        android:id="@+id/ivInforme"
                        android:layout_width="340px"
                        android:layout_height="180px"
                        android:layout_weight="1"
                        android:background="#747AC4"
                        app:srcCompat="@drawable/btn_mini5_informa" />

                    <ImageButton
                        android:id="@+id/ivLinks"
                        android:layout_width="340px"
                        android:layout_height="180px"
                        android:layout_weight="1"
                        android:background="#747AC4"
                        app:srcCompat="@drawable/btn_mini6_link" />

                    <ImageButton
                        android:id="@+id/ivAdm"
                        android:layout_width="340px"
                        android:layout_height="180px"
                        android:layout_weight="1"
                        android:background="#747AC4"
                        app:srcCompat="@drawable/btn_mini7_adm" />
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="#000000"
                android:text="@string/text" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="#000000"
                android:text="@string/text2" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>